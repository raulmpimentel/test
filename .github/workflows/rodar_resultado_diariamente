name: Resultados BetPoint (manhã)

on:
  schedule:
    - cron: "0 13 * * *"   # 10:00 America/Sao_Paulo (≈13:00 UTC)
  workflow_dispatch:

jobs:
  resultados:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Instalar dependências
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Setup Chrome (para Selenium)
        uses: browser-actions/setup-chrome@v1
        with:
          chrome-version: stable

      - name: Rodar scraper e enviar e-mail
        env:
          EMAIL_SENHA_APP: ${{ secrets.EMAIL_SENHA_APP }}
          EMAIL_REMETENTE: ${{ secrets.EMAIL_REMETENTE }}
          EMAIL_DESTINATARIO: ${{ secrets.EMAIL_DESTINATARIO }}
        run: |
          python 03_GITHUB_UNIFICADO_COMPLETO.py
